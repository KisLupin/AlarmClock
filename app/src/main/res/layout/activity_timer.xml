<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <RelativeLayout
        android:id="@+id/time_setting"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <LinearLayout
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp54"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/white"
                android:text="h"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/minute"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp54"
                android:textColor="@color/white"
                android:text="00"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/white"
                android:text="m"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp54"
                android:textColor="@color/white"
                android:text="00"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/white"
                android:text="s"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/delete_text_time"
            android:layout_width="wrap_content"
            android:src="@drawable/delete_text"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_toRightOf="@id/text_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_below="@id/time_setting"
        android:layout_width="wrap_content"
        android:src="@drawable/line"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/time_setting"
        android:layout_marginBottom="@dimen/dp128"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/num1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="1"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="2"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="3"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/num4"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="4"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="5"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="6"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/num7"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="7"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="8"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="9"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/num0"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="0"
                android:gravity="center"
                android:textSize="@dimen/sp48"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/start_timer"
        android:layout_width="wrap_content"
        android:background="@drawable/start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp16"
        android:text="Start"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
</RelativeLayout>
